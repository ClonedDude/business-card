<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use Laravel\Socialite\Facades\Socialite;
use App\Models\User;
use Illuminate\Support\Facades\Auth;

class KeycloakController extends Controller
{
    // Redirect to Keycloak for authentication
    public function redirectToKeycloak()
    {
        return Socialite::driver('keycloak')->redirect();
    }

    // Handle the callback from Keycloak
    public function handleKeycloakCallback()
    {
        try {
            $keycloakUser = Socialite::driver('keycloak')->user();

            // Find or create the user in your database
            $user = User::firstOrCreate(
                [
                    'email' => $keycloakUser->email,
                ],
                [
                    'name' => $keycloakUser->name,
                    'password' => bcrypt(rand(24)), // Dummy password
                ]
            );

            // Login the user
            Auth::login($user);

            return redirect()->intended('/home');
        } catch (\Exception $e) {
            return redirect('/login')->withErrors(['message' => 'Unable to login.']);
        }
    }

    // Logout
    public function logout()
    {
        Auth::logout();
        return redirect()->to(config('services.keycloak.base_url') . '/realms/' . config('services.keycloak.realm') . '/protocol/openid-connect/logout?redirect_uri=' . config('app.url'));
    }
}
